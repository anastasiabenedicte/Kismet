---
const { variant, text, size, id } = Astro.props;
---

<label for={id} class={`button-square ${variant} ${size}`}>
  {text}
</label>

<style>
  .button-square {
    display: inline-block;
    padding: 10px;
    margin-top: 1rem;
    background-color: var(--dark-green);
    border: 1px solid var(--beige);
    color: var(--beige);
    font-family: "Fragment Mono", monospace;
    text-transform: uppercase;
    border-radius: 20px;
    cursor: pointer;
  }

  .button-square:hover {
    background-color: var(--light-purple);
    color: var(--beige);
  }
</style>
