<style>
  .video_box {
    position: relative;
    width: 100%;
    overflow: hidden;
    margin-bottom: 5vh;
    box-shadow: 10px 10px var(--light-purple);
  }

  video {
    width: 100%;
    height: auto;
    object-fit: cover;
    display: block;
  }

  h1 {
    color: rgb(255, 255, 221);
    text-shadow:
      -1px -1px 0 black,
      1px -1px 0 black,
      -1px 1px 0 black,
      1px 1px 0 black;
    text-align: center;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 2;
  }
</style>
