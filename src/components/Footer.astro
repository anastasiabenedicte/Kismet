---
import Button from "./ButtonRound.astro";
---

<footer>
  <div class="footer-container">
    <div class="footer-grid">
      <section>
        <h2>Location</h2>
        <a
          href="https://www.google.com/maps/dir/?api=1&destination=Adelgade+16%2C+1304+Copenhagen+Denmark"
          target="_blank"
          rel="noopener noreferrer"
        >
          Adelgade 16, 1304 KBH K
        </a>
      </section>

      <section class="middle-column">
        <h2>Opening hours</h2>
        <div class="hours">
          <div>MONDAY:</div><div>CLOSED</div>
          <div>TUESDAY:</div><div>7.30 - 18.00</div>
          <div>WEDNESDAY:</div><div>7.30 - 18.00</div>
          <div>THURSDAY:</div><div>7.30 - 18.00</div>
          <div>FRIDAY:</div><div>7.30 - 18.00</div>
          <div>SATURDAY:</div><div>9.00 - 18.00</div>
          <div>SUNDAY:</div><div>9.00 - 15.00</div>
        </div>
        <p>(BREAKFAST ALL DAY)</p>
      </section>

      <section>
        <h2>Socials</h2>
        <a
          href="https://www.instagram.com/kea_kismet_eksamen/"
          target="_blank"
          rel="noopener noreferrer"
        >
          <Button
            variant="variant_1"
            size="medium"
            data="instagram"
            filter="social"
            text="Instagram"
          />
        </a>
      </section>
    </div>
  </div>
</footer>

<style>
  footer {
    width: 100vw !important;
    font-family: monospace;
    color: var(--dark-green);
    background-color: var(--beige);
    text-align: center;
    z-index: 1000;
    overflow-x: hidden;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem 1.5rem;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
    width: 100%;
    text-align: center;
  }

  h2,
  h3 {
    font-weight: 200;
    font-style: italic;
    letter-spacing: 0.2rem;
    margin-bottom: 1.5rem;
  }

  h2 {
    font-size: large;
  }

  h3 {
    font-size: medium;
  }

  .hours {
    display: grid;
    grid-template-columns: auto auto;
    gap: 0.2rem 1rem;
    justify-content: start;
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.05rem;
  }

  .hours > div {
    text-align: left;
    min-width: 7rem;
  }

  section {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  section a {
    text-decoration: none;
    color: inherit;
    font-family: inherit;
    margin: 0.2rem 0;
    transition: opacity 0.3s ease, color 0.3s ease;
    font-size: 0.85rem;
  }

  section a:hover {
    opacity: 0.5;
    color: var(--light-green);
  }

  p {
    margin: 0.3rem 0;
    font-size: 0.8rem;
  }

  @media screen and (min-width: 800px) {
    .footer-container {
      padding: 2rem 1.5rem;
    }

    .footer-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
    }
  }
</style>
